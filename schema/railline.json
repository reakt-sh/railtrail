{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://reakt.sh/schema/railine.json",
    "title": "RailLine",
    "description": "Data regarding a line consisting of tracks.",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "id",
        "version",
        "tracks",
        "map"
    ],
    "properties": {
        "id": {
            "type": "string",
            "pattern": "^[^:]*$",
            "description": "Unique identifier for this line. Must not include: ':'!"
        },
        "version": {
            "type": "string",
            "pattern": "^[^:]*$",
            "description": "Version identifier for the line. Any changes in the track data imply a change in the version. Must not include: ':'!"
        },
        "name": {
            "type": "string",
            "description": "[Optional] Human readable name of this line."
        },
        "tracks": {
            "type": "array",
            "description": "List of tracks of this line.",
            "minItems": 1,
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                    "id",
                    "data"
                ],
                "properties": {
                    "id": {
                        "type": "string",
                        "pattern": "^[^:]*$",
                        "description": "Unique identifier for this track. Must not include: ':'!"
                    },
                    "data": {
                        "type": "object",
                        "additionalProperties": false,
                        "description": "GeoJSON geometry of the track",
                        "required": [
                            "type",
                            "coordinates"
                        ],
                        "properties": {
                            "type": {
                                "type": "string",
                                "const": "LineString",
                                "description": "Fixed GeoJSON type."
                            },
                            "coordinates": {
                                "type": "array",
                                "minItems": 1,
                                "items": {
                                    "type": "array",
                                    "minItems": 2,
                                    "maxItems": 2,
                                    "items": false,
                                    "tsType": "[number, number]",
                                    "prefixItems": [
                                        {
                                            "type": "number",
                                            "description": "Longitude in degrees.",
                                            "minimum": -180,
                                            "maximum": 180
                                        },
                                        {
                                            "type": "number",
                                            "description": "Latitude in degrees.",
                                            "minimum": -90,
                                            "maximum": 90
                                        }
                                    ]
                                }

                            }
                        }
                    },
                    "name": {
                        "type": "string",
                        "description": "[Optional] Human readable name of this track."
                    },
                    "markers": {
                        "type": "object",
                        "description": "[Optional] Marker of different type to be displayed on the track.",
                        "additionalProperties": false,
                        "required": [
                            "types",
                            "data"
                        ],
                        "properties": {
                            "types": {
                                "type": "array",
                                "description": "List of marker types used in the data.",
                                "minItems": 1,
                                "items": {
                                    "type": "object",
                                    "description": "Marker type information.",
                                    "additionalProperties": false,
                                    "required": [
                                        "id",
                                        "name"
                                    ],
                                    "properties": {
                                        "id": {
                                            "type": "string",
                                            "description": "Unique identifier for this type."
                                        },
                                        "name": {
                                            "type": "string",
                                            "description": "Human readable name of this type."
                                        },
                                        "description": {
                                            "type": "string",
                                            "description": "[Optional] Description of this marker type."
                                        }
                                    }
                                }
                            },
                            "data": {
                                "type": "array",
                                "description": "List of markers.",
                                "minItems": 1,
                                "items": {
                                    "type": "object",
                                    "description": "Marker data.",
                                    "additionalProperties": false,
                                    "required": [
                                        "id",
                                        "name",
                                        "type",
                                        "position"
                                    ],
                                    "properties": {
                                        "id": {
                                            "type": "string",
                                            "description": "Unique identifier for this marker."
                                        },
                                        "name": {
                                            "type": "string",
                                            "description": "Human readable name of this marker."
                                        },
                                        "type": {
                                            "type": "string",
                                            "description": "Type of this marker. Must match one of the defined marker types."
                                        },
                                        "position": {
                                            "type": "object",
                                            "description": "GeoJSON point for this marker.",
                                            "additionalProperties": false,
                                            "required": [
                                                "type",
                                                "coordinates"
                                            ],
                                            "properties": {
                                                "type": {
                                                    "type": "string",
                                                    "const": "Point",
                                                    "description": "Fixed GeoJSON type."
                                                },
                                                "coordinates": {
                                                    "type": "array",
                                                    "minItems": 2,
                                                    "maxItems": 2,
                                                    "items": false,
                                                    "tsType": "[number, number]",
                                                    "prefixItems": [
                                                        {
                                                            "type": "number",
                                                            "description": "Longitude in degrees.",
                                                            "minimum": -180,
                                                            "maximum": 180
                                                        },
                                                        {
                                                            "type": "number",
                                                            "description": "Latitude in degrees.",
                                                            "minimum": -90,
                                                            "maximum": 90
                                                        }
                                                    ]
                                                }
                                            }
                                        },
                                        "description": {
                                            "type": "string",
                                            "description": "[Optional] Description of this marker."
                                        },
                                        "extra": {
                                            "type": "object",
                                            "additionalProperties": true,
                                            "description": "[Optional] Additional structured information without schema restrictions."
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "map": {
            "type": "object",
            "description": "Information and configuration for map representations.",
            "additionalProperties": false,
            "required": [],
            "properties": {
                "startConfiguration": {
                    "description": "[Optional] Starting configuration for a map view.",
                    "type": "object",
                    "additionalProperties": false,
                    "required": [
                        "latitude",
                        "longitude"
                    ],
                    "properties": {
                        "latitude": {
                            "type": "number",
                            "description": "Latitude in degrees.",
                            "minimum": -90,
                            "maximum": 90
                        },
                        "longitude": {
                            "type": "number",
                            "description": "Longitude in degrees.",
                            "minimum": -180,
                            "maximum": 180
                        },
                        "zoom": {
                            "type": "integer",
                            "description": "[Optional] Heading in degrees."
                        }
                    }
                }
            }
        }
    }
}
